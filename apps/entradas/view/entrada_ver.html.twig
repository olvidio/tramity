<!-- Bootstrap core JavaScript-->
<script src="{{ base_url }}/node_modules/jquery/dist/jquery.min.js"></script>
<!-- jQuery CSS -->
<link type="text/css" rel='stylesheet' href='{{ base_url }}/node_modules/jquery-ui/themes/base/all.css' />
<link type="text/css" rel="stylesheet" href="{{ base_url }}/node_modules/bootstrap/dist/css/bootstrap.min.css" crossorigin="anonymous">
<link href="{{ base_url }}/node_modules/@fortawesome/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
  
<div id="tot" class="container-fluid mt-3">
<div class="clearfix ">
  <div class="d-inline-flex float-left">
    <div class="p-2 text-dark font-weight-bold" >
      {{ cabeceraIzqd|raw }}
    </div>
  </div>
  <div class="d-inline-flex float-right">
    <div class="p-2 text-dark font-weight-bold align-top text-right" >
      {{ cabeceraDcha|raw }}
    </div>
  </div>
</div>
<!--  --------------- ASUNTO --------------- -->
<div class="row">
  <div class="col-9">
    <label for="asunto_e" class="col-form-label">{{ "Asunto entrada"|trans }}:</label>
      {{ asunto_e }}
  </div>
</div>
  
<!--  --------------------  ESCRITO  --------------------------  -->
<div class="border border-secondary rounded p-3">
{{ escrito_html|raw }}
</div>
<!--  --------------------  FECHA  --------------------------  -->
<div class="clearfix ">
  <div class="d-inline-flex float-left">
    <div class="p-2 text-dark font-weight-bold" >
      <button type="button" class="btn btn-outline-secondary" onClick="fnjs_download_pdf({{ id_entrada }})">
  	    <i class="fa fa-download" aria-hidden="true">  {{ "Descargar en pdf"|trans }}</i>
	  </button>
    </div>
  </div>
  <div class="d-inline-flex float-right">
    <div class="p-2 text-dark font-weight-bold" >
      {{ f_escrito }}
    </div>
  </div>
</div>

<!--  --------------------  ADJUNTOS  --------------------------  -->
{% if a_adjuntos %}
<hr>
<div class="form-group col-md-12">
    <label for="input-adjunto">{{ "Adjuntos"|trans }}:</label>
{% for item,nom in a_adjuntos %}
	<button type="button" class="btn btn-outline-secondary" onClick="fnjs_download({{ item }})">{{ nom }}</button>
{% endfor %}
</div>
{% endif %}
</div>
<hr>
<hr>

<script>
fnjs_download_pdf=function(id_entrada) {
	url = "{{ url_download_pdf }}"+"?id_entrada="+id_entrada;
	window.open(url);
}
fnjs_download=function(item) {
	url = "{{ url_download }}"+"&key="+item;
	window.open(url);
}
</script>
