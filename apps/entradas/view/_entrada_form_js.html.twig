<script type="text/javascript">
    var global_flag = 1;

    $(function () {
        $("#destinos_mas").on('change focusout', fnjs_mas_destinos);
    });
    $(function () {
        $("#referencias_mas").on('change focusout', fnjs_mas_referencias);
    });

    $(function () {
        $("#f_plazo").prop('autocomplete', 'off').datetimepicker({
