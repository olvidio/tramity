	event.stopImmediatePropagation();
    var id_campo='#'+event.currentTarget.id;
    var valor=$(id_campo).val();
    if (event.type == 'change') {
        global_flag = 2;
        if (valor!=0) {
            {{ oArrayProtDestino.ListaSelectsJs|raw }}
        } else {
            $('#referencias_mas').focus();
        }
    }
