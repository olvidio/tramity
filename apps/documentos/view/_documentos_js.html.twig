fnjs_guardar=function(quiet=0){
    event.preventDefault();
    event.stopPropagation();
    event.stopImmediatePropagation();
	// Asegurarme que es por click y no por return (posicion: 0,0)
	var x = event.x || event.clientX;
    var y = event.y || event.clientY;
    if (!x && !y) {
    	return false;
    }
    
	var etiquetas='';
	var i=0;
	var selector="span#span_etiquetas select";
	$(selector).each(function(i) {
		if ($(this).val().length) {  
			i++;
			if (i>1) etiquetas+=",";
			etiquetas+=$(this).val();
		}
	});
	
	var err=0;
	var nom=$('#nom').val();

	if (!nom) { alert("{{ "Debe llenar el campo de nom"|trans|raw }}"); err=1; }
	if (!etiquetas) { alert("{{ "Debe poner como mínimo una etiqueta"|trans|raw }}"); err=1; }
	
	if (err!=1) {
        $.when(fnjs_guardar_datos()).pipe(fnjs_guardar_success).then(function () {
                if (quiet!=1) {
                    alert ("{{ "datos guardados"|trans|raw }}");
                    // Volver a la lista...
                    fnjs_update_div('#main','{{ pagina_cancel|raw }}');
				}
            },
            function (error) { alert (error); return false; }
            );
    }
}

fnjs_guardar_datos=function() {
	var etiquetas='';
	var i=0;
	var selector="span#span_etiquetas select";
	$(selector).each(function(i) {
		if ($(this).val().length) {  
			i++;
			if (i>1) etiquetas+=",";
			etiquetas+=$(this).val();
		}
	});
	
	var err=0;
	var nom=$('#nom').val();

	if (!nom) { alert("{{ "Debe llenar el campo de nom"|trans|raw }}"); err=1; }
	if (!etiquetas) { alert("{{ "Debe poner como mínimo una etiqueta"|trans|raw }}"); err=1; }
	
	if (err!=1) {
        var id_doc=$('#id_doc').val();
        $('#que').val('guardar');
        datos = $('#form_escrito').serialize();	
        request=$.ajax({
            data: datos,
            url: '{{ url_update }}',
            method: 'POST',
            dataType: 'json'
        });
        request.done( function (json) {
            if (json.success != true) {
                alert ('{{ "respuesta"|trans|raw }}: '+json.mensaje);
            } else {
                id = json.id_doc;
                tipo_doc = json.tipo_doc;
                if (id != id_doc) {
                    // caso de nuevo escrito
                    $('#id_doc').val(id);
                    $('#tipo_doc').val(tipo_doc);
                }
            }
        });
        return request;
    }
    return data.sucess = false;
}

fnjs_guardar_success=function(data) {
