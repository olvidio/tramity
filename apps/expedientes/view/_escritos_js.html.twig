                alert ('error: '+rta_txt);
            }
        });

        switch(n) {
            case 1:
                fnjs_ver_doc_ep();
                break;
            case 2:
                alert('hay que programar la función para ethercalc');
                break;
            case 3:
                alert('hay que programar la función para otros');
                break;
            case 4:
                alert('hay que programar la función para documentos');
                break;
        }
	}
	return false;
}

