        var param_json = { que: 'tipo_doc', id_escrito: id_escrito, tipo_doc: n };
        request=$.ajax({
            data: param_json,
            url: url_doc,
            method: 'POST'
        });
        request.done( function (rta) {
            rta_txt=rta.responseText;
            if (rta_txt==undefined) {
                rta_txt='';
            }
