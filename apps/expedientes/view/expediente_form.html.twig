<h1>{{ titulo }} ({{ ponente_txt }})</h1>
<form id ="form_expediente" >
    <input type=hidden name='que' id='que' value=0>
    <input type=hidden name='id_n' id='id_n' value=0>
    <input type=hidden name='id_expediente' id='id_expediente' value={{ id_expediente }} >
    <input type=hidden name='estado' id='estado' value={{ estado }} >
    <input type=hidden name='ponente' id='ponente' value={{ id_ponente }} >
    

<div class="row" >
<!--  Col Izda -->
<div class="col-9" >
  <!--  --------------- TRAMITE --------------- -->
  <div class="form-group row">
    <label for="tramite" class="col-1 col-form-label">{{ "Trámite"|trans }}</label>
    <div class="col-3" >
    	{{ oDesplTramites.desplegable|raw }}
    </div>
    <!--  --------------- VIDA --------------- -->
    <div class="form-group col-md-3">
      <label for="Vida">{{ "Vida"|trans }}</label>
      {{ oDesplVida.desplegable|raw }}
    </div>
    <!--  --------------- VISIBILIDAD --------------- -->
    <div class="form-group col-md-3">
      <label for="Visibilidad">{{ "Visibilidad"|trans }}</label>
      {{ oDesplVisibilidad.desplegable|raw }}
    </div>
  </div>
  <div class="form-group row">
    <!--
    <label for="estado" class="col-1 col-form-label">{{ "Estado"|trans }}</label>
    <div class="col-2" >
    	{{ oDesplEstado.desplegable|raw }}
    </div>
  -->
    <label for="prioridad" class="col-1 col-form-label">{{ "Prioridad"|trans }}</label>
    <div class="col-2" >
    	{{ oDesplPrioridad.desplegable|raw }}
    </div>
    <label for="f_contestar" class="col col-3 col-form-label text-right">{{ "resolver antes de"|trans }}:</label>
    <div class='col-3 date'>
      <input tabindex='41' name='f_contestar' id='f_contestar' type='text' class="form-control" value="{{ f_contestar }}" />
    </div>
  </div>
  <!--  --------------- ASUNTO --------------- -->
  <div class="form-group row">
    <label for="asunto" class="col-2 col-form-label">{{ "Asunto expediente"|trans }}</label>
    <div class="col-10">
      <input tabindex='30' type="text" class="form-control" name="asunto" id="asunto" value="{{ asunto }}">
    </div>
  </div>
  <!--  --------------- ENTRADILLA --------------- -->
  <div class="form-group row">
    <label for="entradilla" class="col-2 col-form-label">{{ "Entradilla"|trans }}</label>
    <div class='col-10'>
      <textarea tabindex='50' rows="5" class="form-control" name='entradilla' id="entradilla">{{ entradilla }}</textarea>
    </div>
  </div>
</div>
<!-- Fin Col Izda -->
<!--  Col Dcha -->
<div class="col-3" >
<!--  --------------------  ANTECEDENTES  --------------------------  -->
{% if id_expediente %}
    {# lista de antecedentes #}
    <div class="form-group col-md-12">
      <label>{{ "Antecedentes"|trans }}:</label>
    </div>
    <div class="form-group col-md-12">
      <button type="button" class="btn btn-info" data-toggle="modal" data-target="#ModalBuscar" onClick="fnjs_antecedente(event,1);" >
        {{ "Entrada"|trans }}
      </button>
      <button type="button" class="btn btn-info" data-toggle="modal" data-target="#ModalBuscar" onClick="fnjs_antecedente(event,2);" >
        {{ "Expediente"|trans }}
      </button>
      <button type="button" class="btn btn-info" data-toggle="modal" data-target="#ModalBuscar" onClick="fnjs_antecedente(event,3);" >
        {{ "Escrito"|trans }}
      </button>
    </div>
    <hr>
{% else %}
  <div class="alert alert-warning" role="alert">
    {{ "Para añadir un antecedente, primero debe guardar el expediente"|trans }}
  </div>
{% endif %}
<div id="lista_antecedentes">
{{ lista_antecedentes|raw }}
</div>
</div>
<!-- Fin Col Dcha -->
</div>
<!-- Fin row -->


  <!--  --------------- ACCIONES --------------- -->
  
{% if id_expediente %}
    <button type="button" class="btn btn-info" onClick="fnjs_update_div('#main','{{ pag_propuesta|raw }}');">
        {{ "nueva propuesta"|trans }}
    </button>
    <button type="button" class="btn btn-info" onClick="fnjs_update_div('#main','{{ pag_plantilla|raw }}');">
        {{ "plantilla"|trans }}
    </button>
    <button type="button" class="btn btn-info" onClick="fnjs_update_div('#main','{{ pag_escrito|raw }}');">
        {{ "nuevo escrito"|trans }}
    </button>
    <button type="button" class="btn btn-info" onClick="fnjs_update_div('#main','{{ pag_respuesta|raw }}');">
        {{ "contestar entrada"|trans }}
    </button>
    <table class="table table-sm table-bordered">
      <thead class="thead-light">
        <tr>
          <th scope="col">#</th>
          <th scope="col">##</th>
          <th scope="col">{{ "tipo"|trans }}</th>
          <th scope="col">{{ "destino"|trans }}</th>
          <th scope="col">{{ "ref."|trans }}</th>
          <th scope="col">{{ "categoria"|trans }}</th>
          <th scope="col">{{ "asunto"|trans }}</th>
          <th scope="col">{{ "adj."|trans }}</th>
        </tr>
      </thead>
      <tbody>
      {% for row in a_acciones %}
        <tr>
          <th scope="row">{{ row.link_mod|raw }}</th>
          <td>{{ row.link_rev|raw }}</td>
          <td>{{ row.tipo }}</td>
          <td>{{ row.protocolo|raw }}</td>
          <td>{{ row.referencias|raw }}</td>
          <td>{{ row.categoria }}</td>
          <td>{{ row.asunto }}</td>
          <td>{{ row.adjuntos|raw }}</td>
        </tr>
        {% endfor %}
      </tbody>
    </table>
{% else %}
  <div class="col-8 alert alert-warning" role="alert">
    {{ "Para añadir escritos, primero debe guardar el expediente"|trans }}
  </div>
{% endif %}

  <div class="form-group row align-items-center">
    <!--  --------------- OFICIALES --------------- -->
    <label for="mt-3" class="col-1">{{ "Preparar"|trans }}:</label>
    <div id="div_preparar"> {# la funcion fnjs_visto remplaza el contenido de este div. #}
     {% for row in a_preparar %}
        <div class="custom-control custom-checkbox custom-control-inline">
          <input type="checkbox" class="" name="a_preparar[]" id="{{ row.id }}" value="{{ row.id }}#{{ row.visto }}" {{ row.chk }}>
          {% if row.visto %}
            <label class="mt-2 ml-2 text-success" >{{ row.text }} ({{ "visto"|trans }})</label>
          {% else %}
            <label class="mt-2 ml-2" >{{ row.text }}</label>
          {% endif %}
        </div>
    {% endfor %}
    </div>
    <button tabindex='' class="btn btn-outline-secondary" onClick="fnjs_visto(event);" >
      {{ "marcar como visto"|trans }}
    </button>
  </div>
  
  <!--  --------------- FIRMAS OFICINA --------------- -->
  <div id="div_firmas_oficina" class="form-group row">
    <label for="firmas_oficina" class="col-md-1">{{ "Firmas oficina"|trans }}:</label>
    <div class="col-6">
      <span id="span_firmas_oficina">
      	{{ oArrayDesplFirmasOficina.ListaSelects|raw }}
      </span>
    </div>
  </div>
  <!--  --------------- OTRAS FIRMAS --------------- -->
  <div id="div_firmas" class="form-group row">
    <label for="firmas" class="col-md-1">{{ "Otras Firmas"|trans }}:</label>
    <div class="col-6">
      <span id="span_firmas">
      	{{ oArrayDesplFirmas.ListaSelects|raw }}
      </span>
    </div>
  </div>
  
<!--  --------------------  BOTONES --------------------------  -->
  <button tabindex='91' class="btn btn-secondary" onClick="fnjs_cancelar(event);" >
    {{ "Cancelar"|trans }}
  </button>
  <button tabindex='90' class="btn btn-primary" onKeyUp="fnjs_guardar(event);" onClick="fnjs_guardar(event);" >
    {{ "Guardar"|trans }}
  </button>
  {% if id_expediente %}
      <button tabindex='90' class="btn btn-success" onClick="fnjs_circular(event);" >
        {{ "Circular"|trans }}
      </button>
  {% endif %}
</form>


