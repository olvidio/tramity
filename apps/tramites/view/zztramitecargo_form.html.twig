<div class="card" style="width: 30rem;">
  <div class="card-header">
    <h5 class="card-title">{{ "Datos del Tramite"|trans }}: {{ tramite }}</h5>
  </div>
  <div class="card-body">
<div class="row">
  <div class="col-12">
      <form class="user" id="frm_tramite"  name="frm_tramite" action="" method="post">
      {{ oHash.getCamposHtml|raw }}
        <div class="form-group input-group col-10">
          <div class="input-group-prepend">
              <span class="input-group-text">{{ "Cargo"|trans }}</span>
          </div>
          	{{ oDesplCargos.desplegable|raw }}
        </div>
        <div class="form-group input-group col-4">
          <div class="input-group-prepend">
              <span class="input-group-text">{{ "Orden"|trans }}</span>
          </div>
            <input type="text" class="form-control" id="orden_tramite" name="orden_tramite" value="{{ orden_tramite }}">
        </div>
        <div class="form-group input-group col-8">
          <div class="input-group-prepend">
              <span class="input-group-text">{{ "número mínimo de firmas"|trans }}</span>
          </div>
            <input type="text" class="form-control" id="multiple" name="multiple" value="{{ multiple }}">
        </div>
        <div class="form-group input-group col-10">
          <button onclick="fnjs_guardar(this.form);" type="button" class="btn btn-primary btn-block col-6">{{ "Guardar"|trans }}</button>
        </div>
      </form>
  </div>
</div>
</div>
</div>