<script>
fnjs_guardar=function(formulario){
    datos = $(formulario).serialize();	
    request=$.ajax({
        data: datos,
        url: '{{ url_update }}',
        type: 'post',
        dataType: 'json'
    });
    request.done( function (json) {
        if (json.success != true) {
            alert ('{{ "respuesta"|trans|raw }}: '+json.mensaje);
        } else {
            {{ oPosicion.js_atras(1)|raw }}
        }
    });
}
</script>
<div class="card" style="width: 30rem;">
  <div class="card-header">
    <h5 class="card-title">{{ "Datos de la Oficina"|trans }}</h5>
  </div>
  <div class="card-body">
<div class="row">
  <div class="col-12">
      <form class="user" id="frm_oficina"  name="frm_oficina" action="" method="post">
      {{ oHash.getCamposHtml|raw }}
        <div class="form-group input-group col-6">
          <div class="input-group-prepend">
              <span class="input-group-text">{{ "Oficina"|trans }}</span>
          </div>
           <input type="text" class="form-control" id="sigla" name="sigla" placeholder="nombre de la oficina" value="{{ sigla }}">
        </div>
        <div class="form-group input-group col-10">
          <div class="input-group-prepend">
              <span class="input-group-text">{{ "Orden"|trans }}</span>
          </div>
            <input type="text" class="form-control" id="orden" name="orden" placeholder="orden" value="{{ orden }}">
        </div>
        <div class="form-group input-group col-10">
          <button onclick="fnjs_guardar(this.form);" type="button" class="btn btn-primary btn-block col-6">{{ "Guardar"|trans }}</button>
        </div>
      </form>
  </div>
</div>
</div>
</div>