<div id="condiciones">
<form id="frm_que" name="frm_que" action="" method="post">
<input type="hidden" id="calendario" name="calendario" value="{{ calendario }}" >

<h2>{{ "pendientes activos de escritos anulados"|trans }}</h2>

<table class="table table-sm table-bordered">
  <thead class="thead-light">
    <tr>
      <th scope="col">{{ "protocolo"|trans }}</th>
      <th scope="col">{{ "ref."|trans }}</th>
      <th scope="col">{{ "asunto"|trans }}</th>
      <th scope="col">{{ "oficinas"|trans }}</th>
      <th scope="col">{{ "fecha escrito"|trans }}</th>
      <th scope="col">{{ "contestar antes de"|trans }}</th>
      <th scope="col">{{ "fecha entrada"|trans }}</th>
      <th scope="col">{{ "pendientes"|trans }}</th>
    </tr>
  </thead>
<tbody>
  {% for row in a_entradas %}
    <tr>
      <td>{{ row.protocolo }}</td>
      <td>{{ row.referencias|raw }}</td>
      <td>{{ row.asunto|raw }}</td>
      <td>{{ row.oficinas|raw }}</td>
      <td style="text-align: right">{{ row.f_escrito }}</td>
      <td style="text-align: right">{{ row.f_contestar }}</td>
      <td style="text-align: right">{{ row.f_entrada }}</td>
      <td>
      {% for key, pdt in row.pendientes %}
      		{{ key }}=> {{ pdt|nl2br }}
      {% endfor %}
      </td>
    </tr>
    {% endfor %}
  </tbody>
</table>




  
  <!--  --------------------  Botones --------------------------  -->
  <div class="row">
    <button id="btn_cancelar" type="button" tabindex='90' class="m-3 col-1 btn btn-secondary" onClick="fnjs_cancelar();" >
      {{ "cancelar"|trans }}
    </button>
    {#
    <button id="btn_trasladar" type="button" tabindex='90' class="m-3 col-1 btn btn-primary" onClick="fnjs_trasladar('#frm_que');" >
      {{ "trasladar"|trans }}
    </button>
    #}
  </div>
  </form>
</div>
<script>



fnjs_proto=function(num,any,siguiente){
    var numero;
    var prot_num=$(num).val();
    numero=prot_num.split("/");
    if (numero[1]) {
        $(num).val(numero[0]);
        $(any).val(numero[1]);
        $(siguiente).focus();
    }
}
fnjs_cancelar=function() {
    event.preventDefault();
    event.stopPropagation();
    event.stopImmediatePropagation();
	var go = $('#go').val();
	if (go == 'entradas') { // estoy en una ventana independiente
        window.close();
    } else {
        // Asegurarme que es por click y no por return (posicion: 0,0)
        var x = event.x || event.clientX;
        var y = event.y || event.clientY;
        if (!x && !y) {
            return false;
        }
        fnjs_update_div('#main', '{{ pagina_cancel|raw }}');
    }
}
</script>