fnjs_ver_opciones=function(tipo){
	event.preventDefault();
    event.stopPropagation();
    event.stopImmediatePropagation();
	switch (tipo) {
		case "completa":
			var n=$('#simple').val();
			if (n==1) {
				$('#mas_opciones').hide();
				$('#opciones').html("{{ "ver ficha completa"|trans }}");
				$('#simple').val(0);
			} else {
				$('#mas_opciones').show();
				$('#opciones').html("{{ "ver ficha sencilla"|trans }}");
				$('#simple').val(1);
			}
			break;
		case "periodico":
			var n=$('#simple_per').val();
			if (n==1) {
				$('#tr_f_plazo').show();
				$('#periodico').hide();
				$('#opciones_per').html("{{ "ver periodicidad"|trans }}");
				$('#txt_plazo').html("{{ "plazo para contestar"|trans }}");
				$('#simple_per').val(0);
			} else {
				$('#tr_f_plazo').hide();
				$('#periodico').show();
				$('#opciones_per').html("{{ "ocultar periodicidad"|trans }}");
				$('#txt_plazo').html("{{ "fecha de fin"|trans }}");
				$('#simple_per').val(1);
			}
			break;
	}
}

fnjs_proto=function(num,any,indice){
	var siguiente="xx";
	var id_lugar=0;
	var s=0;
	var numero;
	n=$(num).val();
	numero=n.split("/");
	if (numero[1]) {
		$(num).val(numero[0]);
		$(any).val(numero[1]);
  	}
	a1=$(num).val();
	a2=$(any).val();
	if (a1 && a2) {
		// Para el número de referencia
		if (num.substr(0,13)=='#ref_prot_num') {
			que='s4';
			id_lugar=$('#ref_id_lugar').val();
			prot_num=$(num).val();
			prot_any=$(any).val();
			siguiente="#f_plazo";
		}
		var url = 'apps/core/comprobar_protocolo.php';
		var datos = 'que='+que+'&id_lugar='+id_lugar+'&prot_num='+prot_num+'&prot_any='+prot_any;
        request=$.ajax({
            url: url,
            data: datos,
            method: 'POST',
            dataType: 'json'
        });
        request.done( function (json) {
            if (json.success != true) {
            	alert ('{{ "respuesta"|trans|raw }}: '+json.mensaje);
            } else {
				if (json.rango) { alert("{{ "nº de protocolo fuera de rango"|trans|raw }}"); s=1; }
				if (json.any) { alert("{{ "No es de este año, ni del año pasado"|trans|raw }}"); s=1; }
				if (json.repe) { alert("{{ "nº de protocolo repetido"|trans|raw }}");  s=1; }
				if (json.txt) { alert(json.txt);  s=1; }
				if (json.error) { alert(json.error);  s=1; }
				if (json.anulado) {
					alert("{{ "El escrito de referencia ha sido anulado"|trans|raw }}"+" ("+json.anulado+").");
				}
				if (json.salto) {
					alert("{{ "El nº de protocolo tiene un salto de más de xxx números respecto al último"|trans|raw }}"+" ("+json.salto+").");
					s=1;
				}
				if(json.id_reg) {
					$('#id_reg').val(json.id_reg);
				} else {
					alert("{{ "No existe ningún escrito con este protocolo. No se guardará."|trans|raw }}");
				}
				if (json.id_of_ponente) {
					$('#id_oficina').val(json.id_of_ponente);
				}
				if (json.asunto) {
					$('#asunto').val(json.asunto);
					siguiente="#f_plazo";
				} else {
					siguiente="#asunto";
				}
				$('#detalle').val(json.detalle);
				$('#visibilidad').val(json.visibilidad);
				if (json.oficinas) {
					//pongo a 0 (por si ya habia algo)
					fnjs_quitar_oficinas();
					count=0;
					array_of=json.oficinas.split(" ");
					$.each(array_of,function(i,id_of) {
						if (id_of) { //puede haber un espacio al final i lo cuenta.
                            $('#oficinas_mas').val(id_of);
                            fnjs_mas_oficinas('x',id_of);
						}
					});
				}
				$('#mas_opciones').show();
				$('#opciones').html("{{ "ver ficha sencilla"|trans }}");
				$('#simple').val(1);
			}
			//complete: function() { if (s==1) { $(num).focus(); } else { $(siguiente).focus(); } }
        });
	} else {
		alert ("{{ "Debe introducir el número de protocolo y el año"|trans|raw }}");
	}
}

