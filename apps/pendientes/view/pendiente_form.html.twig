<form id="form_pendiente" name="form_pendiente" action="" method="post" >
<input type="hidden" id="m" name="m">
<input type="hidden" id="calendario" name="calendario" value='{{ calendario }}'>
<input type="hidden" id="uid" name="uid" value='{{ uid }}'>
<input type="hidden" id="cal_oficina" name="cal_oficina" value='{{ cal_oficina }}'>
<input type="hidden" id="nuevo" name="nuevo" value='{{ nuevo }}'>
<input type="hidden" id="go" name="go" value='{{ go }}'> 
<input type="hidden" id="busca_ap_prot_num" name="busca_ap_prot_num" value='{{ busca_ap_num }}'> 
<input type="hidden" id="busca_ap_prot_any" name="busca_ap_prot_any" value='{{ busca_ap_any }}'> 
<input type='hidden' id='id_reg' name='id_reg' value='{{ id_reg }}'>
<input type='hidden' id='simple' name='simple' value='{{ simple }}'>
<input type='hidden' id='simple_per' name='simple_per' value='{{ simple_per }}'>

{% if calendario == 'registro' %}
  <h1>{{ "entrada del registro pendiente de contestar"|trans }}</h1>
{% else %}
  <h1>{{ "pendiente de la oficina"|trans }}</h1>
{% endif %}

<button id="opciones" tabindex='' class="btn btn-outline-secondary" onClick="fnjs_ver_opciones('completa');" >
  {{ txt_completa }}
</button>
<button id="opciones_per" tabindex='' class="btn btn-outline-secondary" onClick="fnjs_ver_opciones('periodico');" >
  {{ txt_periodicidad }}
</button>
        
<br>
<br>
<!--  ********************  FICHA SIMPLE   ****************************  -->
<div>
  {% if secretaria %}
  <!--  --------------------  Oficinas --------------------------  -->
  <div class="form-group row align-items-center">
    <label for="oficina" class="col-1">{{ "Oficina"|trans }}:</label>
    <div class="col-6">
      	{{ oDesplOficinas.desplegable|raw }}
    </div>
  </div>
  {% else %}
	<input type="hidden" id="id_oficina" name="id_oficina" value="{{ id_oficina }}">
  {% endif %}
  <!--  --------------- ASUNTO --------------- -->
  <div class="form-group row">
    <label for="asunto_e" class="col-1 col-form-label">{{ "Asunto"|trans }}</label>
    <div class="col-9">
      <input tabindex='30' type="text" class="form-control" name="asunto" id="asunto" value="{{ asunto }}">
    </div>
  </div>
  <!--  --------------------  Etiquetas --------------------------  -->
  <div id="div_etiquetas" class="form-group row align-items-center">
    <label for="etiquetas" class="col-1">{{ "Etiquetas"|trans }}:</label>
    <div class="col-6">
      <span id="span_etiquetas">
      	{{ oArrayDesplEtiquetas.ListaSelects|raw }}
      </span>
    </div>
  </div
  <!--  --------------------  Plazo --------------------------  -->
  <div class="form-group row" style="{{ display_plazo }}" >
        <label id="txt_plazo" for="f_plazo" class="col col-2 col-form-label">{{ txt_plazo }}:</label>
        <div class='col-2 date'>
          <input tabindex='30' name='f_plazo' id='f_plazo' type='text' class="form-control" value="{{ f_plazo }}"  onchange="fnjs_comprobar_fecha('#f_plazo')" />
        </div>
  </div> 
  <!--  --------------------  Encargado --------------------------  -->
  <div class="form-group row align-items-center">
    <label for="oficina" class="col-2">{{ "¿Está asignado a alguien?"|trans }}:</label>
    <div class="col-6">
	  {{ oDesplEncargados.desplegable|raw }}
    </div>
  </div
</div> 

<!--  ********************  FICHA COMPLETA   ****************************  -->

<div id=mas_opciones style="{{ display_completa }}">

  <!--  --------------- PROTOCOLO --------------- -->
  <div class="form-group row">
    <label class="col-2 col-form-label">{{ "protocolo o referencia"|trans }}</label>
    <div class="col-3">
        {{ oDesplLugar.desplegable|raw }}
    </div>
    <div class="col-4">
      <input id="ref_prot_num" name="ref_prot_num" size="12" value="{{ ref_prot_num }}" class=contenido title="{{ "protocolo origen"|trans }}" onchange="fnjs_proto('#ref_prot_num','#ref_prot_any','#b_buscar_7')">
      /
      <input id="ref_prot_any" name="ref_prot_any" size="5" value="{{ ref_prot_any }}" class=contenido title="{{ "año protocolo origen"|trans }}" >
    </div>
  </div>
  <!--  --------------- DETALLE --------------- -->
{% if perm_detalle < 2 %}
	<input type="hidden" tabindex="-1" id="detalle" name="detalle" style="width:100%;" value="{{ detalle }}" />
{% else %}
  <div class="form-group row">
    <label for="detalle" class="col-1 col-form-label">{{ "detalle"|trans }}</label>
    <div class="col-9">
      <input tabindex='30' type="text" class="form-control" name="detalle" id="detalle" value="{{ detalle }}">
    </div>
  </div>
{% endif %}
{% if calendario == 'oficina' %}
  <!--  --------------- DESTINO --------------- -->
  <div class="form-group row">
    <label class="col-3 col-form-label">{{ "¿con quién es el pendiente?"|trans }}</label>
    <div class="col-3">
        {{ oDesplLugar1.desplegable|raw }}
    </div>
  </div>
{% endif %}
  <!--  --------------- Oficinas implicadas --------------- -->
  <div class="form-group row">
	<label for="oficinas" class="col-3">{{ "otras oficinas implicadas"|trans }}</label>
    <div class="col">
      <span id="span_oficinas">
      	{{ oArrayDesplOficinas.ListaSelects|raw }}
      </span>
    </div>
  </div>

  <!--  --------------- OBSERVACIONES --------------- -->
  <div class="form-group row">
    <label for="observ" class="col-2 col-form-label">{{ "Observaciones"|trans }}</label>
    <div class='col-10'>
      <textarea tabindex='50' rows="5" class="form-control" name='observ' id="observ">{{ observ }}</textarea>
    </div>
  </div>
  
  <div class="form-group row">
    <!--  --------------- VISIBILIDAD --------------- -->
    <label class="col-1 col-form-label">{{ "Visibilidad"|trans }}</label>
    <div class="col-2">
      {{ oDesplVisibilidad.desplegable|raw }}
    </div>
    <!--  --------------- STATUS --------------- -->
    <label class="col-1 col-form-label">{{ "estado"|trans }}</label>
    <div class="col-2">
        {{ oDesplStatus.desplegable|raw }}
    </div>
	<!--  --------------------  fecha --------------------------  -->
    <label for="f_acabado" class="col col-2 col-form-label">{{ "fecha acabado"|trans }}:</label>
    <div class='col-2 date'>
      <input tabindex='30' name='f_acabado' id='f_acabado' type='text' class="form-control" value="{{ f_acabado }}"  onchange="fnjs_cambiar_estado()" />
    </div>
  </div>
</div>

<!--  ********************  PERIODICIDAD   ****************************  -->
<div id=periodico style="{{ display_periodico }}">
	{{ include('pendiente_form_periodico.html.twig')  }}
</div>

  <!--  --------------------  BOTONES --------------------------  -->
<div>
  <button tabindex='91' class="btn btn-secondary" onClick="fnjs_cancelar(event);" >
    {{ "Volver"|trans }}
  </button>
  <button tabindex='90' class="btn btn-success" onClick="fnjs_guardar(event);" >
    {{ "guardar"|trans }}
  </button> 
</div>
</form>

{% if cargar_css %}
</div>
{% endif %}
